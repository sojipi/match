# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=true
ENVIRONMENT=development

# Remote Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@your-postgres-host:5432/ai_matchmaker

# Remote Redis Configuration
REDIS_URL=redis://username:password@your-redis-host:6379

# AI API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional fallback

# Memory Database Configuration
CHROMA_DB_PATH=./data/chroma_db
MEM0_CONFIG_PATH=./config/mem0_config.yaml

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-matchmaker-uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# Application Configuration
LOG_LEVEL=INFO

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja

# Translation Service (Optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Agent Configuration
MAX_CONVERSATION_TURNS=20
CONVERSATION_TIMEOUT_SECONDS=1800
AGENT_RESPONSE_TIMEOUT_SECONDS=30

# Testing Configuration
TEST_MODE=False
MOCK_EXTERNAL_APIS=False